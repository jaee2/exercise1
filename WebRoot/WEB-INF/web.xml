<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>exercise3-3</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>apple</param-name>
    <param-value>4.0</param-value>
  </context-param>
  <context-param>
    <param-name>pear</param-name>
    <param-value>3.5</param-value>
  </context-param>
  <context-param>
    <param-name>tom</param-name>
    <param-value>1234</param-value>
  </context-param>
  <context-param>
    <param-name>jerry</param-name>
    <param-value>4321</param-value>
  </context-param>
  <servlet>
    <servlet-name>GoodsServlet</servlet-name>
    <servlet-class>servlet.GoodsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GoodsServlet</servlet-name>
    <url-pattern>/servlet/GoodsServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CartServlet</servlet-name>
    <servlet-class>servlet.CartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CartServlet</servlet-name>
    <url-pattern>/servlet/CartServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SecurityServlet</servlet-name>
    <servlet-class>servlet.SecurityServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SecurityServlet</servlet-name>
    <url-pattern>/servlet/SecurityServlet</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>charencode</filter-name>
    <filter-class>filter.CharEncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>charencode</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>includeFilter</filter-name>
    <filter-class>filter.IncludeFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>includeFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>  
  <filter>
    <filter-name>SecurityFilter</filter-name>
    <filter-class>filter.SecurityFilter</filter-class>
    <init-param>
      <param-name>tom</param-name>
      <param-value>1234</param-value>
    </init-param>
    <init-param>
      <param-name>jerry</param-name>
      <param-value>4321</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>SecurityFilter</filter-name>
    <url-pattern>/servlet/CartServlet</url-pattern>
  </filter-mapping>
  <session-config>
    <session-timeout>500</session-timeout>
  </session-config>
</web-app>